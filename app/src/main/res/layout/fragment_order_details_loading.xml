<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <View
            android:id="@+id/tv_section_shimmer"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_table_number_shimmer"
            android:layout_width="70dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="@id/tv_section_shimmer"
            app:layout_constraintTop_toBottomOf="@id/tv_section_shimmer" />

        <View
            android:id="@+id/tv_date_shimmer"
            android:layout_width="140dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:background="#AAAAAA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_section_shimmer" />

        <View
            android:id="@+id/tv_init_hour_shimmer"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="@+id/tv_date_shimmer"
            app:layout_constraintTop_toBottomOf="@id/tv_date_shimmer" />

        <View
            android:id="@+id/tv_end_hour_shimmer"
            android:layout_width="100dp"
            android:layout_height="16dp"
            android:layout_marginTop="3dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="@+id/tv_date_shimmer"
            app:layout_constraintTop_toBottomOf="@id/tv_init_hour_shimmer" />

        <View
            android:layout_width="80dp"
            android:layout_height="18dp"
            android:background="#AAAAAA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView4_shimmer" />

        <View
            android:id="@+id/textView4_shimmer"
            android:layout_width="45dp"
            android:layout_height="18dp"
            android:layout_marginEnd="24dp"
            android:background="#AAAAAA"
            app:layout_constraintEnd_toStartOf="@+id/textView3_shimmer"
            app:layout_constraintTop_toTopOf="@+id/textView3_shimmer" />

        <View
            android:id="@+id/textView3_shimmer"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_marginTop="24dp"
            android:background="#AAAAAA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_hour_shimmer" />

        <include
            android:id="@+id/article_order_1"
            layout="@layout/item_article_order_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3_shimmer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>